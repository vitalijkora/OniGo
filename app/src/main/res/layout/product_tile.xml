<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="16dp">

    <ImageView
        android:id="@+id/product_tile_image"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:background="@drawable/bg_image_10"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/product_tile_info"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_tile_image">

        <TextView
            android:id="@+id/product_tile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="12sp"
            tools:text="title"/>

        <TextView
            android:id="@+id/product_tile_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontWeight="700"
            tools:text="price" />
        <TextView
            android:id="@+id/product_tile_price_with_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontWeight="700"
            tools:text="price" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>