<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="@dimen/mMargin">
        <ImageView
            android:id="@+id/product_tile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_image_10"
            android:scaleType="centerCrop"
            android:layout_marginVertical="@dimen/mMargin"
            android:layout_marginHorizontal="@dimen/lMargin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/product_tile_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/mMargin"
            android:layout_marginRight="@dimen/lMargin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/product_tile_image">
            <TextView
                android:id="@+id/product_tile_title"
                android:layout_marginBottom="@dimen/sMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_tile_unit"
                        android:layout_marginBottom="@dimen/sMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/greyText"
                        android:textSize="10sp"
                        tools:text="unit"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/product_tile_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="price"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:layout_marginRight="@dimen/sMargin"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="@string/currency"/>
                        <TextView
                            android:id="@+id/product_tile_price_with_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greyText"
                            android:textSize="10sp"
                            tools:text="price"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greyText"
                            android:textSize="6sp"
                            android:text="@string/currency"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|right"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_image_10"
                        app:backgroundTint="@color/secondary"
                        android:textColor="@color/white"
                        android:text="+"
                        android:padding="0dp"
                        android:textSize="24sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>